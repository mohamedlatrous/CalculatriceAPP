<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <EditText
                android:id="@+id/result"
                android:background="#ffffff"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:textSize="36sp">
            </EditText>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <Button android:onClick="oneClick"
                android:text="1" />
            <Button android:onClick="twoClick"
                android:text="2"/>
            <Button android:onClick="threeClick"
                android:text="3"/>
            <Button
                android:onClick="divisionClick"
                android:text="/"/>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <Button android:onClick="fourClick"
                android:text="4" />
            <Button android:onClick="fiveClick"
                android:text="5"/>
            <Button android:onClick="sixClick"
                android:text="6"/>
            <Button android:onClick="multipliClick"
                android:text="*"/>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <Button android:onClick="sevenClick"
                android:text="7" />
            <Button android:onClick="eightClick"
                android:text="8"/>
            <Button android:onClick="nineClick"
                android:text="9"/>
            <Button android:onClick="moinClick"
                android:text="-"/>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <Button android:onClick="zeroClick"
                android:text="0" />
            <Button android:onClick="clear"
                android:text="C"/>
            <Button android:onClick="vergulClick"
                android:text="."/>
            <Button android:onClick="plusClick"
                android:text="+"/>
        </TableRow>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="calculer"
            android:text="=" />
    </TableLayout>
</LinearLayout>

